{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@e7f3/build/*": [
        "packages/build/*"
      ],
      "@e7f3/ui/*": [
        "packages/ui/*"
      ],
      "@e7f3/core/*": [
        "packages/core/*"
      ]
    },
    "strict": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}