{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@library/build/*": ["packages/build/*"],
      "@library/ui/*": ["packages/ui/*"],
      "@library/core/*": ["packages/core/*"]
    },
    "strict": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
