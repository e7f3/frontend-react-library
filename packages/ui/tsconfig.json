{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "../..",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@e7f3/ui/*": [
        "../../packages/ui/*"
      ],
      "@e7f3/core/*": [
        "../../packages/core/*"
      ],
      "shared/*": [
        "shared/*"
      ]
    },
    "strict": true,
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "node"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}
