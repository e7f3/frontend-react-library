{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es2017",
        "lib": ["es2017", "dom"],
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@library/build/*": ["packages/build/*"],
            "@library/ui/*": ["packages/ui/*"],
            "@library/core/*": ["packages/core/*"],
            "shared/*": ["shared/*"]
        },
        "strict": true,
        "types": ["@testing-library/jest-dom", "jest", "node"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
